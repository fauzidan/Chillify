<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".music_ingfo">

    <ImageView
        android:id="@+id/music_image"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_img" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:background="@drawable/detail_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_title"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="380dp"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/coolvetica_rg"
        android:letterSpacing="0.05"
        android:text="Judul Lagu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_band"
        android:layout_width="340dp"
        android:layout_height="24dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-medium"
        android:text="Band / Penyanyi"
        android:textAlignment="center"
        android:textColor="#B3FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_title" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-black"
        android:text="Putar"
        android:textColor="#FFFFFF"
        app:backgroundTint="#1eb953"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/btn_edit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_btn"
        android:backgroundTint="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05"
        android:text="Ubah"
        android:textColor="#B3FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/btn_album"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_baseline_library_music_24"
        android:backgroundTint="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05"
        android:text="Album List"
        android:textColor="#B3FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>